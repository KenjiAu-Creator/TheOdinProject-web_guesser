<html>
  <head>
    <style>
    body {
      background: <%= color %>;
    }
    </style>
  </head>
  <body>
    <p>
    <% if count== 0%>
      <p> You ran out of guesses! A new number will be generated now.
      </p>
      <% guessClass.resetCount() %>
      <%= numberClass.reset %>
    <% end %>
    </p> 
    <p>
    <% if(cheat == "true") %>
      <p>
      <%= "The SECRET NUMBER is #{numberClass.number?}" %>
      </p>
    <% end %>
    </p>
    <p>
      <%= message %>
    </p>
    <p>
    <%= count %>
    </p>
    <form>
      <input type='text' name='guess' />
      <input type='submit' value='Guess!' />
    </form>
  </body>
</html>